{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/build/**/*", "**/__tests__/**/*"],
  "baseUrl": ".",
  "paths": {
    "@interview/*": ["packages/*/src"]
  }
}
